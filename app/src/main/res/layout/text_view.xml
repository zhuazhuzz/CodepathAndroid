<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AnimalAppReplication.AppWidgetContainer"
    android:id="@+id/allViews"
    >

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.AnimalAppReplication.AppWidget.InnerView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sign Up"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/backbutton"
        style="@style/Widget.AnimalAppReplication.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="80dp"
        android:layout_toLeftOf="@id/appwidget_text"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_name"
        app:layout_constraintLeft_toLeftOf="@+id/appwidget_text"
        />
    <ImageView
        android:id="@+id/cheese"
        style="@style/Widget.AnimalAppReplication.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@id/appwidget_text"
        android:background="@android:color/transparent"
        android:src="@drawable/cheese"
        app:layout_constraintLeft_toLeftOf="@+id/appwidget_text"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:text="E-mice"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/emailText"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“±Use cheese phone instead"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/emailText"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mousename"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/phone"
        />
    <EditText
        android:id="@+id/usernameText"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray"
        android:layout_below="@id/username"
        app:layout_constraintStart_toStartOf="@+id/email"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liceword"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/usernameText"
        />
    <EditText
        android:id="@+id/passwordText"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray"
        android:layout_below="@id/password"
        app:layout_constraintStart_toStartOf="@+id/email"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:id="@+id/birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Expiration of Cheese"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/passwordText"
        />
    <EditText
        android:id="@+id/birthText"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray"
        android:layout_below="@id/birth"
        app:layout_constraintStart_toStartOf="@+id/email"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/EULA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By clicking Sign Up you are indicating you have read and acknowledge the Terms of Service and Privacy Notice"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/birthText"
        />
    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/buttonsign"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:background="@color/gray"
        android:layout_below="@id/EULA"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>