<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.SpeedConverter"
    android:id="@+id/allViews"
    android:background="@color/lightyellow"
    >

    <TextView
        android:id="@+id/topText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Speed Conversion"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/mph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="190dp"
        android:text="MPH"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="45dp"
        />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/topText"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    >

    <EditText
        android:id="@+id/msEnter"
        android:layout_width="65dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:textSize="24sp"
        android:gravity="right"
        android:maxLength="4"

        android:inputType="number"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="M/S"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/msEnter"
        />

</RelativeLayout>


    <TextView
        android:id="@+id/kmph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:text="KMPH"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/mph"
        android:layout_alignRight="@id/mph"
        />

    <TextView
        android:id="@+id/mach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:text="MACH"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/kmph"
        android:layout_alignRight="@id/mph"
        />

    <TextView
        android:id="@+id/mphspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="25dp"

        android:textSize="24sp"

        android:layout_toRightOf="@id/mph"
        />
    <TextView
        android:id="@+id/kmphspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"

        android:textSize="24sp"
        android:layout_below="@id/mphspeed"
        android:layout_toRightOf="@id/kmph"
        />
    <TextView
        android:id="@+id/machspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:textSize="24sp"
        android:layout_below="@id/kmphspeed"
        android:layout_toRightOf="@id/mph"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/topText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:id="@+id/speed"
        android:src="@drawable/speed"
        android:clickable="true"
        android:focusable="true"
        />

    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:layout_below="@id/speed"

        />


</RelativeLayout>



