<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/allViews"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/shape"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="Cooking Ingredients"
        android:textSize="34dp"
        android:textColor="@color/black"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/rngImage"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/name"
        android:layout_below="@id/rngImage"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/aisle"
        android:layout_below="@id/name"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/special"
        android:layout_below="@id/aisle"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/special"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:layout_marginTop="35dp"
        android:text="Give me an Ingredient"
        android:textSize="24dp"
        />






</RelativeLayout>
